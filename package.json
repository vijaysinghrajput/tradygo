{
  "name": "tradygo",
  "version": "1.0.0",
  "description": "TradyGo - Multivendor E-commerce Platform",
  "private": true,
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cd apps/api && pnpm build",
    "build:all": "pnpm -r build",
    "migrate:deploy": "cd apps/api && pnpm exec prisma migrate deploy",
    "start": "node apps/api/dist/main.js",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up -d",
    "docker:prod:down": "docker-compose down",
    "db:migrate": "cd apps/api && pnpm exec prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:seed": "cd apps/api && pnpm exec prisma db seed --schema=./prisma/schema.prisma",
    "db:studio": "cd apps/api && pnpm exec prisma studio --schema=./prisma/schema.prisma",
    "db:generate": "cd apps/api && pnpm exec prisma generate --schema=./prisma/schema.prisma"
  },
  "dependencies": {
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "@tradygo/config": "workspace:*",
    "@turbo/gen": "^1.10.12",
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "turbo": "^2.3.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@9.15.0"
}