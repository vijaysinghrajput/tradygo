{
  "name": "tradygo-admin",
  "version": 2,
  "buildCommand": "cd ../.. && pnpm build --filter=@tradygo/admin",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && pnpm install",
  "framework": "nextjs",
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_URL": "https://your-railway-api-domain.railway.app"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "functions": {
    "app/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-railway-api-domain.railway.app/api/:path*"
    }
  ]
}