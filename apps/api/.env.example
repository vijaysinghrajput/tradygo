# Environment
NODE_ENV=development
TZ=Asia/Kolkata

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tradygo_core"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-random"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_SECRET="your-super-secret-refresh-jwt-key-here-make-it-long-and-random"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis
REDIS_URL="redis://localhost:6379"

# Email Configuration
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="noreply@tradygo.in"

# File Upload (MinIO/S3)
S3_ENDPOINT="http://localhost:9000"
S3_BUCKET="tradygo"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_REGION="us-east-1"
CDN_BASE_URL="http://localhost:9000/tradygo"

# App URLs
APP_PORT=3001
APP_URL="http://localhost:3001"
BASE_URL_WEB="http://localhost:3000"
BASE_URL_ADMIN="http://localhost:3002"
BASE_URL_SELLER="http://localhost:3003"
API_BASE_URL="http://localhost:3001"

# Security
CORS_ORIGIN="http://localhost:3000,http://localhost:3002,http://localhost:3003"
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Payment Gateway
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
RAZORPAY_WEBHOOK_SECRET="your_razorpay_webhook_secret"

STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
STRIPE_SECRET_KEY="your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret"

# SMS/OTP
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# AWS S3 (Production)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="tradygo-prod"

# Monitoring
SENTRY_DSN="your_sentry_dsn"

# Logging
LOG_LEVEL="info"