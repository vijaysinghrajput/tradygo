# Railway Environment Variables for API Deployment
# Copy these to Railway dashboard environment variables

# Environment
NODE_ENV=production
TZ=Asia/Kolkata
PORT=3001

# Database (Railway will provide this automatically)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# JWT Configuration (REQUIRED - Railway deployment failing without these)
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production-make-it-very-long-and-random-123456789
JWT_ACCESS_TTL=15m
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production-make-it-very-long-and-random-987654321
JWT_REFRESH_TTL=7d

# Legacy JWT support (some code might still use these)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random-555666777
JWT_EXPIRES_IN=15m

# App URLs (Update with your Railway domain)
APP_URL=https://your-railway-api-domain.railway.app
API_BASE_URL=https://your-railway-api-domain.railway.app
BASE_URL_WEB=https://tradygo-web.vercel.app
BASE_URL_ADMIN=https://tradygo-admin.vercel.app
BASE_URL_SELLER=https://tradygo-seller.vercel.app

# CORS Configuration (Update with your Vercel domains)
CORS_ORIGIN=https://tradygo-web.vercel.app,https://tradygo-admin.vercel.app,https://tradygo-seller.vercel.app

# Security
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Demo Configuration
DEMO_MODE=true
ALLOWED_ROLES=ADMIN,SUPER_ADMIN
SESSION_TIMEOUT=15

# Demo Credentials
DEMO_SUPER_ADMIN_EMAIL=sa@tradygo.in
DEMO_SUPER_ADMIN_PASSWORD=Admin@12345!
DEMO_ADMIN_EMAIL=admin@tradygo.in
DEMO_ADMIN_PASSWORD=Admin@12345!

# Redirects
REDIRECT_AFTER_LOGIN=/dashboard
REDIRECT_AFTER_LOGOUT=/login
REDIRECT_UNAUTHORIZED=/login?error=access_denied

# Logging
LOG_LEVEL=info

# Optional Services (can be added later)
# REDIS_URL=redis://localhost:6379
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
# EMAIL_FROM=noreply@tradygo.in